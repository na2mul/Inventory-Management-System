@using DevSkill.Inventory.Web.Areas.Admin.Models.TransferAccounts
@model AddTransferAccountModel

<!-- Modal -->
<div class="modal fade" id="addBalanceTransferModal" tabindex="-1" role="dialog" aria-modal="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Balance Transfer</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-antiforgery="true" asp-area="Admin" asp-controller="TransferAccounts" asp-action="Add" id="addTransferAccountForm"
                  method="POST">
                <div class="" style="padding: 0px 15px 0px 15px;">
                    <div class="row">
                        <div class="col" style="margin-right: 10px;margin-left: 10px; background-color: aliceblue; border-radius: 0.5rem;">
                            <h4 style="text-align:center; padding-top:7px;">Sender</h4>
                            <div class="form-group">
                                <label>Sending Account *</label>
                                <select class="form-control accountType-select" id="SenderAccountTypeId" name="SenderAccountTypeId" required="">
                                    <option value="">Select One</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Sending Account Number *</label>
                                <select asp-for="FromAccountId"  class="form-control" required="">
                                    <option value="">Select Account Type First</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Transfer Amount</label>
                                <input asp-for ="TransferAmount" type="number" class="form-control"  placeholder="Amount" required="">
                            </div>
                        </div>
                        <div class="col" style="margin-right: 10px; background-color: #f0fff4; border-radius: 0.5rem;">
                            <h4 style="text-align:center; padding-top:7px;">Receiver</h4>
                            <div class="form-group">
                                <label>Receiving Account *</label>
                                <select class="form-control accountType-select" id="ReceiverAccountTypeId" name="ReceiverAccountTypeId" required="">
                                    <option value="">Select One</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Receiving Account Number *</label>
                                <select asp-for="ToAccountId" class="form-control" required="">
                                    <option value="">Select Account Type First</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Note</label>
                                <input asp-for="Note" type="text" class="form-control" name="note" placeholder="If have any note">
                            </div>
                            <input asp-for="TransferDate" type="hidden" />
                        </div>
                    </div>
                    <div class="modal-footer" style="background-color: aliceblue;">
                        <button type="button" class="btn btn-secondary btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-square"></i>&nbsp;&nbsp;Cancel</button>
                        <button type="submit" id="add-button" class="btn btn-primary"><i class="bi bi-floppy"></i>&nbsp;&nbsp;Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>