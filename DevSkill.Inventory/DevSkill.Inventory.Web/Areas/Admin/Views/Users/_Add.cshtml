@using DevSkill.Inventory.Web.Areas.Admin.Models.Users
@model AddUserModel

<!-- Modal -->

<div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: aliceblue;">
                <h4 class="modal-title">New User Information</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-antiforgery="true" asp-area="Admin" asp-controller="Users" asp-action="AddUser" id="addUserForm"
                method="POST" enctype="multipart/form-data">
                <div class="row" style="padding:20px;">
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="FirstName" class="form-label">First Name *</label>
                        <input type="text"
                               asp-for="FirstName"
                               class="form-control"
                               aria-describedby="NameHelp"
                               />
                        <div id="NameHelp" class="form-text">
                            Provide your first name
                        </div>
                    </div> 
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="LastName" class="form-label">Last Name *</label>
                        <input type="text"
                               asp-for="LastName"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide your last name
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="CompanyName" class="form-label">Company Name *</label>
                        <input type="text"
                               asp-for="CompanyName"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide your company name
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email"
                               asp-for="Email"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide your email
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Password" class="form-label">Password *</label>
                        <input type="password"
                               asp-for="Password"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide your password
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="ConfirmPassword" class="form-label"> Confirm Password</label>
                        <input type="password"
                               asp-for="ConfirmPassword"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide your Confirm Password
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="PhoneNumber" class="form-label">Mobile Number</label>
                        <input type="text"
                               asp-for="PhoneNumber"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide your mobile number
                        </div>
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Role"></label>
                        <select asp-for="Role" class="form-control select2 category-select">
                            <option selected value="">Select a Role *</option>
                            <option value="Admin">Admin</option>
                            <option value="HR">HR</option>
                            <option value="Salesman">Salesman</option>
                            <option value="Manager">Manager</option>
                        </select>
                    </div> 
                    <input type="hidden" id="Status" name="Status" />
                </div>
                <div class="modal-footer" style="background-color: aliceblue;">
                    <button type="button" class="btn btn-secondary btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-square"></i>&nbsp;&nbsp;Cancel</button>
                    <button type="submit" id="add-button" class="btn btn-primary"><i class="bi bi-floppy"></i>&nbsp;&nbsp;Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


