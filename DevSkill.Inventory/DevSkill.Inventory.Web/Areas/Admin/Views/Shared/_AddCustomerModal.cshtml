@using DevSkill.Inventory.Web.Areas.Admin.Models.Customers
@model AddCustomerModel

<!-- Modal -->

<div class="modal fade" id="addCustomerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: aliceblue;">
                <h4 class="modal-title">New Customer Information</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-antiforgery="true" id="addCustomerForm" method="POST" enctype="multipart/form-data">               
                <div class="row" style="padding:20px;">
                    <input type="hidden" asp-for="Status" value="true" />
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Name" class="form-label">Customer Name *</label>
                        <input type="text"
                               asp-for="Name" 
                               class="form-control"
                               placeholder="Customer Name"
                               aria-describedby="NameHelp"
                               />
                        <div id="NameHelp" class="form-text">
                            Provide a Customer Name
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Mobile" class="form-label">Mobile Number *</label>
                        <input type="text"
                               asp-for="Mobile"
                               class="form-control"
                               placeholder="Mobile Number"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide a Mobile Number
                        </div>
                    </div> 
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Address" class="form-label">Address *</label>
                        <input type="text"
                               asp-for="Address"
                               placeholder="Address"
                               class="form-control"
                               aria-describedby="NameHelp" />
                        <div id="NameHelp" class="form-text">
                            Provide a Address
                        </div>
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Email">Email </label>
                        <input asp-for="Email"
                               type="text"
                               class="form-control"
                               placeholder="example@gmail.com">
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Balance">Opening Balance</label>
                        <input asp-for="Balance"
                               type="number" 
                               class="form-control"
                               placeholder="Opening Balance">
                    </div>                   

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Image">
                            Product Image 
                            <small style="color: red; font-size:10px">( Maximum image size 500kb and png, jpg format )</small>
                        </label>
                        <input asp-for="Image" type="file" accept=".png,.jpg,.jpeg">
                    </div>
                    
                </div>
                <div class="modal-footer" style="background-color: aliceblue;">
                    <button type="button" class="btn btn-secondary btn-danger" data-bs-dismiss="modal">
                        <i class="bi bi-x-square"></i>&nbsp;&nbsp;Cancel
                    </button>
                    <button type="submit" id="add-customer-button" class="btn btn-primary">
                        <i class="bi bi-floppy"></i>&nbsp;&nbsp;Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>