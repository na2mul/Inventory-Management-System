@using DevSkill.Inventory.Web.Areas.Admin.Models.Products
@model AddProductModel

<!-- Modal -->

<div class="modal fade" id="AddProductModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: aliceblue;">
                <h4 class="modal-title">New Product Information</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-antiforgery="true" asp-area="Admin" asp-controller="Products" asp-action="Add" id="addProductForm"
                method="POST" enctype="multipart/form-data">
                <div class="row" style="padding:20px;">
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Name" class="form-label">Product Name *</label>
                        <input type="text"
                               asp-for="Name" 
                               class="form-control"
                               aria-describedby="NameHelp"
                               />
                        <div id="NameHelp" class="form-text">
                            Provide a Product Name
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12">
                        <label asp-for="Barcode" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-white">
                                <img src="~/icons/barcode.png" alt="icon" style="width:18px;height:18px;">
                            </span>
                            <input type="number"
                                   class="form-control barcode"
                                   asp-for="Barcode"
                                   placeholder="Barcode">
                            <button type="button"
                                    class="btn btn-info generate-barcode">
                                Generate
                            </button>
                        </div>
                    </div>
 
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="CategoryId">Category *</label>
                        <select asp-for="CategoryId" class="form-control select2 category-select">
                            <option selected value="">Select an category *</option>
                            <option value="newCategory">New Category</option>
                        </select>
                    </div>
                    <div class="d-none" id="newCategory">
                        <div class="form-group col-md-12 col-sm-12 col-12">
                            <label>New Category </label>
                            <input type="text" class="form-control" name="newCategory" placeholder="New Category *" id="newcat">
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="MeasurementUnitId">Unit *</label>
                        <select asp-for="MeasurementUnitId" class="form-control select2 measurementUnit-select">
                            <option selected value="">Select an unit *</option>
                            <option value="newUnit">New Unit</option>
                        </select>
                    </div>
                    <div class="d-none" id="newUnit">
                        <div class="form-group col-md-12 col-sm-12 col-12">
                            <label>New Unit </label>
                            <input type="text" class="form-control" name="newUnit" placeholder="New Unit *" id="newut">
                        </div>
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="PurchasePrice">Purchase price </label>
                        <input asp-for="PurchasePrice"
                               type="number"
                               class="form-control"
                               placeholder="Purchase price">
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="MRP">MRP Price</label>
                        <input asp-for="MRP"
                               type="number" 
                               class="form-control"
                               placeholder="MRP Price">
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="WholesalePrice">Wholesale Price</label>
                        <input  asp-for = "WholesalePrice"
                            type="number" 
                            class="form-control" 
                            placeholder="Wholesale Price">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Stock">Total Stock</label>
                        <input asp-for="Stock"
                               type="number"
                               class="form-control"
                               placeholder="Total Stock">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="LowStock">Low Stock</label>
                        <input asp-for="LowStock" 
                               type="number"
                               class="form-control"
                               placeholder="Low Stock">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="DamageStock">Damage Stock</label>
                        <input asp-for="DamageStock"
                               type="number"
                               class="form-control"
                               placeholder="damage stock">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description"
                               type="text" 
                               class="form-control" required>
                    </div>

                    <div class="form-group col-md-6 col-sm-12 col-12">
                        <label asp-for="Image">
                            Product Image 
                            <small style="color: red; font-size:10px">( Maximum image size 500kb and png, jpg format )</small>
                        </label>
                        <input asp-for="Image" type="file" accept=".png,.jpg,.jpeg">
                    </div>
                    
                </div>
                <div class="modal-footer" style="background-color: aliceblue;">
                    <button type="button" class="btn btn-secondary btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-square"></i>&nbsp;&nbsp;Cancel</button>
                    <button type="submit" id="add-button" class="btn btn-primary"><i class="bi bi-floppy"></i>&nbsp;&nbsp;Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


