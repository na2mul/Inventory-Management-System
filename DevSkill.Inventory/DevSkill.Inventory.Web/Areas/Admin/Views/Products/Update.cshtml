@using DevSkill.Inventory.Application.Features.Products.Commands
@model ProductUpdateCommand
@{
    ViewData["Title"] = "Update Product";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Update Product</h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Update Product</li>
                </ol>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row g-4">
            <!--begin::Col-->
            <div class="col-12">
                <partial name="_ResponsePartial" />
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-md-6">
                <!--begin::Quick Example-->
                <div class="card card-primary card-outline mb-4">
                    <!--begin::Header-->
                    <div class="card-header"><div class="card-title">Update a new Product</div></div>
                    <!--end::Header-->
                    <!--begin::Form-->
                    <form asp-antiforgery="true" asp-area="Admin" asp-controller="Products"
                          asp-action="Update" method="post">
                        <!--begin::Body-->
                        <div class="card-body">
                            <div class="mb-3">
                                <label as-for="Name" class="form-label">Product Name</label>
                                <input type="text"
                                       class="form-control"
                                       asp-for="Name"
                                       aria-describedby="titleHelp" />
                                <div id="titleHelp" class="form-text">
                                    Provide a Product Name
                                </div>
                            </div>
                            <div class="mb-3">
                                <label as-for="Price" class="form-label">Price</label>
                                <input type="number"
                                       class="form-control"
                                       asp-for="Price"
                                       aria-describedby="titleHelp" />
                                <div id="titleHelp" class="form-text">
                                    Provide a Product Price
                                </div>
                            </div>
                            <div class="mb-3">
                                <label as-for="StockQuantity" class="form-label">StockQuantity</label>
                                <input type="number"
                                       class="form-control"
                                       asp-for="StockQuantity"
                                       aria-describedby="titleHelp" />
                                <div id="titleHelp" class="form-text">
                                    Provide a Product StockQuantity
                                </div>
                            </div>
                            <div class="mb-3">
                                <label as-for="Description" class="form-label">Description</label>
                                <input type="text"
                                       class="form-control"
                                       asp-for="Description"
                                       aria-describedby="titleHelp" />
                                <div id="titleHelp" class="form-text">
                                    Provide a Product Description
                                </div>
                            </div>

                        </div>
                        <!--end::Body-->
                        <!--begin::Footer-->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <!--end::Footer-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Quick Example-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::App Content-->


