@using DevSkill.Inventory.Web.Areas.Admin.Models.Products
@model DamageProductModel

<!-- Store Modal -->
<div class="modal fade" id="damageProductModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:aliceblue;">
                <h4 class="modal-title">Damage Product Information</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-antiforgery="true" asp-area="Admin" asp-controller="Products" asp-action="Damage" id="damageProductForm" method="POST">
                <div class="row" style="padding:20px;">
                    <div class="form-group col-md-6 col-sm-12 col-12">                    
                        <label>Select Product</label>
                        <div>
                            <select  asp-for = "Id" class="form-control select2 product-select" required>
                                <option value="">Select an Product *</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-12"> 
                        <label>Damage Quantity</label>
                        <input asp-for ="Stock" id = "damageInput" type="number" class="form-control" placeholder="Damage Quantity" required>
                    </div>
                </div>
                <div class="modal-footer" style="background-color:aliceblue;">
                    <button type="button" class="btn btn-secondary btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-square"></i>&nbsp;&nbsp;Cancel</button>
                    <button type="submit" id="damage-button" class="btn btn-primary"><i class="bi bi-floppy"></i>&nbsp;&nbsp;Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
